<section class="product spad">
    <div style="display: flex; width: 100%; ">
        <div class="list-cart" style="width: 320px;
                                                margin-top: 150px;
                                                border-radius: 10px;
                                                ">
            <div class="card"
                style="background-color: brown; color: white; border-top-right-radius: 10px;border-top-left-radius: 10px; justify-content: flex-end;">
                <h5 class="card-header">Danh Mục</h5>
            </div>
            <div class="cart-body">
                <ul class="list-group">
                    <li class="list-group-item" aria-disabled="true">Quần áo</li>
                    <li class="list-group-item" id="giayDep">
                        <a href="/"> Giày dép</a>
                    </li>
                    <li class="list-group-item">Phụ kiện</li>
                    <li class="list-group-item">Công nghệ</li>
                    <li class="list-group-item">Gia dụng</li>
                </ul>
            </div>
        </div>
        <div class="container" style="margin-top: 20px; ">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>

            <div class="product__filter" style="">
                {{#each data}}
                <div class="item__product" style="display: flex; flex-wrap: wrap;">
                    <div class="product__item">
                            <img src="data:{{image.contentType}};base64,{{this.image.data}}" alt="image"
                                style="width: 100%; height: 60% ; padding: 5px;">
                        <div class="product__item__text">
                            <a href="/products/detail:{{this._id}}" style="font-size: 24px; color: #e53637; font-weight: 600;">
                            {{this.name}}</a>
                            <p>{{this.desc}}</p>

                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>{{this.price}} VND</h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                 {{/each}}
            </div>
</section>
